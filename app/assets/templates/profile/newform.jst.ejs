<form class='new-experience-form'>
  <b>Title</b> * <br> <input type='text' name='title' value="<%=experience.title%>"><br><br>

  <b>Employer</b> * <br> <input type='text' name='employer' value="<%=experience.employer%>"><br><br>

  <b>Start date</b> <br><input type='date' name='start_date' value="<%=experience.start_date%>"><br><br>

  <b>End date</b> (leave black if current employer) <br><input type='date' name='end_date' value="<%=experience.end_date%>"><br><br>

  <b>Description</b> <br><textarea name='description'><%= experience.description %></textarea><br><br>

  <button class="save-button">Save</button>  <button class="cancel-button">Cancel</button>

</form>
