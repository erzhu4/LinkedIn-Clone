
<div class="home-info-panel group">
  <div class="home-profile-picture">profile picture</div>
  <div class="home-user-info-container">
    <name class="user-name"><%= user.escape("fname") %> <%= user.escape("lname") %></name><br>
    Title: <%= user.escape("title") %><br>
    email: <%= user.escape("email") %><br>
  </div>

  <div class="edit-and-connect-container">

    <div class="edit-button-container">
      <a href="#" class="edit-info-button">Edit Personal Info<a>
    </div>

    <div class="home-connection-number-container">
      <% if (user.attributes.connections) {%>
        <%= user.attributes.connections.length %> Connections
      <% } %>
    </div>

  </div>

</div>


<div class="home-user-panel">
  <div class="home-user-corner">Connect with others</div>

  <div class="people-you-may-know-word">People you may know</div>

  <div class="random-users-container group">
    <% randoms.each(function (user) { %>
      <div class="random-users-item">
        <a href="#profile/<%=user.id%>"><img class="home-random-profile-picture" src=""><br>
        <%=user.escape("fname") + " " + user.escape("lname")%><br></a>
        <div class="random-description"><%=user.escape("title")%></div>
      </div>

    <%})%>
  </div>

</div>
