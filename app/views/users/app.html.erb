<% if (logged_in?) %>
  <div class="home-container" current-id="<%=current_user.id%>">
<% else %>
  <div class="home-container" current-id="0">
<% end %>
</div>

<% if current_user.sample && current_user.connections.length == 0 %>

  <script>
    $( function () {
      window.LynxIn.initialize();
      alert("HI GUEST! You may have connection requests!!! Check your pending requests in the top right hand corner!");
    })
  </script>
<%else%>
  <script>
    $(window.LynxIn.initialize)
  </script>
<% end %>
